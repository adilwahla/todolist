<%- include('header'); -%>
<div class="box" id="heading">
  <h1> <%= listTitle %></h1>
</div>


<div class="box">
  <%for(var i=0; i<newListItems.length;i++){%>

  <form action="/delete" method="post">
    <div class="item">

      <input type="checkbox" name="checkBox" value="<%=newListItems[i]._id %>" onChange="this.form.submit()">
      <p><%= newListItems[i].name %></p>  
    </div>
          <!-- Hidden input field to send the title of the list -->
          <input type="hidden" name="listName" value="<%= listTitle %>">
  </form>

  <%}%>

  <form  class="item" action="/" method="post">

   <input type="text" name="todoitem" placeholder="New Item" autocomplete="off">
   <button type="submit" name="list" value=<%=listTitle %>>+</button>


  </form>
</div>


